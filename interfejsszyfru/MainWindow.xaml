        <TextBox HorizontalAlignment="Left" Name="kluczodszyfr" Margin="400,272,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="163"/>
        <ProgressBar Style="{DynamicResource ProgressBarStyle1}" HorizontalAlignment="Center" Height="5" Margin="0,197,0,0" VerticalAlignment="Top" Width="800" RenderTransformOrigin="0.5,0.5">
