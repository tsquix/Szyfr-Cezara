        <TextBox HorizontalAlignment="Left" Name="textbox2" Margin="23,71,0,0" TextWrapping="Wrap" Text="zaszyfruj mnie" VerticalAlignment="Top" Width="168"/>
        <Label Content="Wprowadź klucz 1-34" HorizontalAlignment="Left" Margin="400,38,0,0" VerticalAlignment="Top" Width="134"/>
